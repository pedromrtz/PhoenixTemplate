{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "lib": [ "es2015", "dom" ],
    "module": "ESNext",
    "target": "ES5",
    "outDir": "wwwroot/js",
    "rootDir": "TScripts",
    "esModuleInterop": true
  },
  "include": [
    "TScripts/**/*"
  ]
}
